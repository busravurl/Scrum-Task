@model TrelloKubra.Models.Entities.tbl_GorevDurumlari
@{
    ViewBag.Title = "GorevDurumEkle";
    Layout = "~/Views/Shared/KullaniciLayout.cshtml";
}
<br />
<br />
<br />
<br />
<div class="container-contact100">
    <div class="wrap-contact100">
        <form action="/GorevDurum/GorevDurumEkle/" method="post" class="contact100-form validate-form">
            <span class="contact100-form-title">
                Görev Durum Ekle
            </span>
            <label>Görev Adı</label>
            @Html.DropDownListFor(k => k.tbl_Gorevler.GorevId, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
            <br />
            <label>Durum</label>
            @Html.DropDownListFor(k => k.tbl_Durum.DurumId, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
            <br />
            <label>Açıklama</label>
            @Html.TextAreaFor(k => k.Aciklama, new { @class = "form-control" })
            <br />
            <label>Tarih</label>
            @Html.TextBoxFor(k => k.GorevDurumTarihi, "{0: dd.MM.yyyy}", new { @class = "form-control" })
            <br />
            <label>Kullanıcı Adı Soyadı</label>
            @Html.DropDownListFor(k => k.tbl_Kullanicilar.KullaniciId, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
            <br />
            <label>Yapılacak İş 1</label>
            @Html.TextBoxFor(k => k.Yapilacakis1, new { @class = "form-control" })
            <br />
            <label>Yapılacak İş 2</label>
            @Html.TextBoxFor(k => k.Yapilacakis2, new { @class = "form-control" })
            <br />
            <label>Yapılacak İş 3</label>
            @Html.TextBoxFor(k => k.Yapilacakis3, new { @class = "form-control" })
            <br />
            <label>Yapılacak İş 4</label>
            @Html.TextBoxFor(k => k.Yapilacakis4, new { @class = "form-control" })
            <div style="margin-top:15px">
                <a href="/GorevDurum/Index/">
                    <input type="submit" class="btn btn-info" value="Ekle">
                </a>

            </div>
        </form>
    </div>
</div>


