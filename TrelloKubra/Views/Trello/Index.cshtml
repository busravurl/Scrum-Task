
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/KullaniciLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>CodePen - Simple Drag and Drop Lean Kanban Board Tool</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.0/normalize.css'>
    <link rel="stylesheet" href="~/Templates/trello/dist/style.css">

</head>
<body>
    <!-- partial:index.partial.html -->

    <br /><br /> <br /><br /> <br /><br /> <br /><br />
    <label>Tahmini Tarih:</label> @TempData["TahminiTarih"].ToString()
    <div class="add-task-container">
        <input type="text" maxlength="12" id="taskText" placeholder="New Task..." onkeydown="if (event.keyCode == 13)
                        document.getElementById('add').click()">
        <button id="add" class="button add-button" onclick="addTask()">Add New Task</button>
    </div>
    <br /><br />
    <div class="main-container">
        <ul class="columns" style="   min-width: 350px;      column-gap: 150px; border: #fff 0.14rem solid; border-radius: 0.2rem;">

            <li class="column to-do-column">
                <div class="column-header">
                    <h4>To Do</h4>
                </div>
                <ul class="task-list" id="to-do">
                    <li class="task">
                        <p>@TempData["Yapilacakis1"].ToString()</p>
                    </li>
                    <li class="task">
                        <p>@TempData["Yapilacakis2"].ToString()</p>
                    </li>
                    <li class="task">
                        <p>@TempData["Yapilacakis3"].ToString()</p>
                    </li>
                    <li class="task">
                        <p>@TempData["Yapilacakis4"].ToString()</p>
                    </li>
                </ul>
            </li>

            <li class="column doing-column">
                <div class="column-header" ">
                    <h4>Doing</h4>
                </div>
                <ul class="task-list" id="doing">
                </ul>
            </li>

            <li class="column done-column">
                <div class="column-header" ">
                    <h4>Done</h4>
                </div>
                <ul class="task-list" id="done">
                </ul>
            </li>

            <li class="column trash-column">
                <div class="column-header" ;">
                    <h4>Trash</h4>
                </div>
                <ul class="task-list" id="trash">
                </ul>
                <div class="column-button">
                    <button class="button delete-button" onclick="emptyTrash()">Delete</button>
                </div>
            </li>

        </ul>
    </div>


    <!-- partial -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/dragula/3.7.2/dragula.js'></script>
    <script src="~/Templates/trello/dist/script.js"></script>

</body>
</html>

